<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Spyder</title>
    <link href="~/Content/jquery-ui.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/primeui-3.0.0.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/themes/bluesky/theme.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/spyderpui.css" type="text/css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.11.3.min.js" vtype="text/javascript"></script>
    <script src="~/Scripts/jquery-ui.js" type="text/javascript"></script>
    <script src="~/Scripts/primeui-3.0.0.js" type="text/javascript"></script>
    <script src="~/Scripts/x-tag-core.js" type="text/javascript"></script>
    <script src="~/Scripts/primeelements-3.0.0.js" type="text/javascript"></script>
    <script src="~/Scripts/plugins/mustache.min.js" type="text/javascript"></script>
    <script src="~/Scripts/spyderjs/layout.js"></script>
</head>
<body>
    <div>
        <h3 class="first">Spyder</h3>

        <p-menubar>
            <p-menuitem value="Principal" icon="fa-home">                
                <href=@Html.ActionLink("Principal", "Index", "Home")></href>
            </p-menuitem>
            <p-submenu value="NFe" icon="fa-file-o">
                <p-menuitem value="Recebidas" icon="fa-mail-forward"></p-menuitem>
                <p-menuitem value="Emitidas" icon="fa-mail-reply"></p-menuitem>
                <p-menuitem value="Sefaz" icon="fa-gear"></p-menuitem>
            </p-submenu>

            <p-submenu value="NFSe" icon="fa-file-o">
                <p-menuitem value="Recebidas" icon=" fa-mail-forward"></p-menuitem>
                <p-menuitem value="Emitidas" icon=" fa-mail-reply"></p-menuitem>
                <p-menuitem value="Sefaz" icon=" fa-gear"></p-menuitem>
            </p-submenu>

            <p-submenu value="CTe" icon="fa-file-o">
                <p-menuitem value="Recebidas" icon="fa-mail-forward"></p-menuitem>
                <p-menuitem value="Emitidas" icon="fa-mail-reply"></p-menuitem>
                <p-menuitem value="Sefaz" icon="fa-gear"></p-menuitem>
            </p-submenu>

            <p-submenu value="Cadastros Básicos" icon="fa-gear">
                <p-menuitem value="Estados (UF)">
                    <href="@Html.ActionLink("Estados (UF)", "Index", "Estados")"></href>
                </p-menuitem>
                <p-menuitem value="Relações"></p-menuitem>
                <p-menuitem value="Banco"></p-menuitem>
                <p-menuitem value="Meus Dados"></p-menuitem>
            </p-submenu>

            <p-menuitem value="Quit" icon="fa-power-off"></p-menuitem>
        </p-menubar>

    </div>
    <br /><br />

    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Spyder</p>
        </footer>
    </div>

</body>
</html>